@model IEnumerable<MissingPersons.Models.MissingPerson>
@{
    ViewBag.Title = "Index";
}
<div style="text-align:center">
<img src="../Images/missing.jpg" alt="Tu podaj tekst alternatywny" width="600px" height="600px">
<br />
<br />
<h3><b text-align="center">Baza zaginionych osób</b></h3>
</div>
<h2>Lista osób zaginonych:</h2>

@if (Model.Count() == 0)
{
    <div class="empty-list">
        Baza jest pusta
    </div>
}
@foreach (var item in Model)
{
    <div class="item">
        <div><p>Imię: <strong>@Html.DisplayFor(modelItem => item.Name)</strong></p>
             <p>Drugie imię: <strong>@Html.DisplayFor(modelItem => item.SecondName)</strong></p>
             <p>Nazwisko: <strong>@Html.DisplayFor(modelItem => item.Surname)</strong></p>
        </div>
        <div><p>Znaki szczególne: <strong>@Html.DisplayFor(modelItem => item.DistinguishingMarks)</strong></p></div>
        <div></div>
        @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edytuj", "Edit", new { id = item.Id })
            @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
        }
        @Html.ActionLink("Zobacz więcej", "Details", new { id = item.Id })
    </div>
}
