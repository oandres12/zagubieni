@model MissingPersons.Models.MissingPerson

@{
    ViewBag.Title = "Szczegóły";
}

<h2>Szczegóły</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Imię
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Drugie imię
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SecondName)
        </dd>

        <dt>
            Nazwisko
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            Data urodzenia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>

        <dt>
            Kolor oczu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EyeColor)
        </dd>

        <dt>
            Wzrost
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Height)
        </dd>

        <dt>
            Znaki szczególne
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DistinguishingMarks)
        </dd>

        <dt>
            Data zaginięcia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastSeenDate)
        </dd>

        <dt>
            Miejsce ostatniego pobytu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastSeenPlace)
        </dd>
        
    </dl>
    <dl>
        <dt>
          Zdjęcie:
        </dt>
        <dd>
            <img src="~/Images/@Model.Picture" alt="" height="250px" width="250px" />
        </dd>
    </dl>
</div>
<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.Id })
    }
    @Html.ActionLink("Powrót", "Index")
</p>
